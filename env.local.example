# Local Development Environment Variables for LLM Chat Application
# Copy this file to .env.local for local development

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=true
PORT=5001

# CORS Origins for local development
CORS_ORIGINS=http://localhost:5874,http://localhost:3000

# MongoDB Configuration (local or Atlas)
MONGODB_URI=mongodb://localhost:27017/llm_chat_app
# Or for Atlas: mongodb+srv://username:password@cluster.mongodb.net/llm_chat_app?retryWrites=true&w=majority

# Security Keys (generate these for local development)
FLASK_SECRET_KEY=your-local-flask-secret-key-here
ENCRYPTION_KEY=your-local-encryption-key-here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:5001/api
REACT_APP_SOCKET_URL=http://localhost:5001

# Optional: Analytics and monitoring (disabled for local development)
REACT_APP_GA_TRACKING_ID=
REACT_APP_SENTRY_DSN=

# Optional: Feature flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=true

# Optional: Custom branding
REACT_APP_APP_NAME=LLM Auditor Chat (Dev)
REACT_APP_APP_VERSION=1.0.0-dev

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Rate Limiting (relaxed for development)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900

# Session Configuration (relaxed for development)
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_MAX_AGE=3600

# WebSocket Configuration
SOCKETIO_CORS_ALLOWED_ORIGINS=http://localhost:5874,http://localhost:3000

# Monitoring and Analytics (disabled for local development)
ENABLE_METRICS=false
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
# 1. This configuration is for local development only
# 2. Never use these values in production
# 3. Generate unique keys for each developer
# 4. Use a local MongoDB instance or a development Atlas cluster 